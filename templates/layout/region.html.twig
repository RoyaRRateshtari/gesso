{#
 /**
  * @file
  * Theme override to display a region.
  */
#}

{%
  set classes, constrain = [
    'l-' ~ region|clean_class,
  ],
  [
    'navigation',
    'breadcrumb',
    'help',
    'highlighted',
    'preface',
    'content',
    'postscript'
  ]
%}

{% if content %}
  {% embed '@layouts/section/section.twig' with {
    'has_wrapper': true,
    'element': 'div',
    'has_constrain': region in constrain ? true : false,
    'has_label': false,
    'has_content_wrapper': false
  } %}

    {% block content %}
      {{ content }}
    {% endblock %}

  {% endembed %}
{% endif %}

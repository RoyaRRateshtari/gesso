{#
  /**
  * @file
  * Component for messages.
  *
  * Variables:
  * - type: [string] Identifies type of error (status, warning, error).
  * - heading: [string] Accessible heading.
  * - attributes: [array] HTML attributes for the message
  *   - class: [string] any classed added by user or system 
  * - message: [array] The message:
  */
#}

<div {% if type == 'error' %} role="alert" {% else %} role="contentinfo" {% endif %} {% if heading %}aria-label="{{ heading }}"{% endif %}{{- attributes|raw -}}>
  {% if messages|length > 1 %}
    <h2 class="visually-hidden">{{ heading }}</h2>
    <ul class="messages__list">
      {% for message in messages %}
        <li class="messages__item">{{- message|raw -}}</li>
      {% endfor %}
    </ul>
  {% else %}
    <div class="messages__content">
      <h2 class="visually-hidden">{{ heading }}</h2>
      {{- messages|first|raw -}}
    </div>
  {% endif %}
</div>
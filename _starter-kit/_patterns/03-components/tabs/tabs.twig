{#
  /**
  * @file
  * Component for a Tab.
  *
  * Variables:
  * - modifier_classes: [string] Classes to modify the default component styling.
  * - heading: [string] Accessible heading.
  * - tabs: [array] The tab items. Each item is an object containing:
  *   - url: [string] URL of the item.
  *   - text: [string] Text of the item.
  *   - active: [boolean] True/False state of the item.
  */
#}

{% if tabs %}
  <nav class="tabs {{ modifier_classes }}" role="navigation">
    <h2 class="visually-hidden">{{ heading|default('Primary tabs'|t) }}</h2>
    <ul class="tab__items">
    {% for tab in tabs %}
      {% set active_class = tab.active ? 'is-active' : '' %}
      <li class="tab__item {{ active_class }}">
        {% block link %}
          <a href="{{ tab.url }}" class="tab__link {{ active_class }}">
            {{ tab.text }}
            {% if tab.active %}
              <span class="visually-hidden">{{ active_label|default('(active tab)') }}</span>
            {% endif %}
          </a>
        {% endblock link %}
      </li>
    {% endfor %}
    </ul>
  </nav>
{% endif %}
